{% extends '2col10col.html.twig' %}

{% block title %}Events{% endblock %}

{% block sidebar %}
    <ul class="nav nav-pills flex-column mb-auto">
        <li>
            <a href="/dashboard/events" class="nav-link text-white active">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar4-event" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M2 2a1 1 0 0 0-1 1v1h14V3a1 1 0 0 0-1-1zm13 3H1v9a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z"/>
                    <path d="M11 7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5z"/>
                </svg>
                Events
            </a>
        </li>
        <li>
            <a href="/dashboard/stats" class="nav-link text-white">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-graph-up" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M0 0h1v15h15v1H0zm14.817 3.113a.5.5 0 0 1 .07.704l-4.5 5.5a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61 4.15-5.073a.5.5 0 0 1 .704-.07"/>
                </svg>
                Stats
            </a>
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="container-fluid d-flex my-4 align-items-center">
        <h4 class="mx-3">Filter | </h4>
        <div class="">
            {{ form_start(form) }}
            <div class="d-flex align-items-center">
                <div class="mx-5">{{ form_row(form.startDate) }}</div>
                <div>{{ form_row(form.endDate) }}</div>
                <div>{{ form_row(form.submit) }}</div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Status</th>
            <th scope="col">Zone</th>
            <th scope="col">Event Type</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events%}
            <tr>
                <th scope="row">{{ event.id }}</th>
                <td>{{ event.status }}</td>
                <td>{{ event.zone }}</td>
                <td>{{ event.eventType }}</td>
                <td>{{ event.dateTime|date('Y-m-d') }}</td>
                <td>{{ event.dateTime|date('H:i') }}</td>
                <td>{{ event.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

