{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <body class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-2 bg-secondary">

            </div>
            <div class="col-10">
                <div class="container-fluid d-flex my-4 align-items-center">
                    <h4 class="mx-3">Filter | </h4>
                    <div class="">
                        {{ form_start(form) }}
                            <div class="d-flex align-items-center">
                                <div class="mx-5">{{ form_row(form.startDate) }}</div>
                                <div>{{ form_row(form.endDate) }}</div>
                                <div>{{ form_row(form.submit) }}</div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">Zone</th>
                        <th scope="col">Event Type</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events%}
                        <tr>
                            <th scope="row">{{ event.id }}</th>
                            <td>{{ event.status }}</td>
                            <td>{{ event.zone }}</td>
                            <td>{{ event.eventType }}</td>
                            <td>{{ event.dateTime|date('Y-m-d') }}</td>
                            <td>{{ event.dateTime|date('H:i') }}</td>
                            <td>{{ event.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </body>
{% endblock %}
